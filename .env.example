# Toolarr Configuration
# Copy this file to .env and update with your values

# Secret key for API authentication (generate with: openssl rand -hex 32)
TOOL_API_KEY=changeme

# Sonarr Configuration
SONARR_INSTANCE_1_NAME=sonarr
SONARR_INSTANCE_1_URL=http://sonarr:8989
SONARR_INSTANCE_1_API_KEY=your_sonarr_api_key_here

# Default Sonarr settings (optional)
SONARR_DEFAULT_ROOT_FOLDER_PATH=/tv
SONARR_DEFAULT_QUALITY_PROFILE_NAME=HD-1080p
SONARR_DEFAULT_LANGUAGE_PROFILE_ID=1

# Radarr Configuration
RADARR_INSTANCE_1_NAME=radarr
RADARR_INSTANCE_1_URL=http://radarr:7878
RADARR_INSTANCE_1_API_KEY=your_radarr_api_key_here

# Default Radarr settings (optional)
RADARR_DEFAULT_ROOT_FOLDER_PATH=/movies
RADARR_DEFAULT_QUALITY_PROFILE_NAME=HD-1080p

# Add more instances as needed:
# SONARR_INSTANCE_2_NAME=sonarr-4k
# SONARR_INSTANCE_2_URL=http://sonarr-4k:8989
# SONARR_INSTANCE_2_API_KEY=your_sonarr_4k_api_key_here
