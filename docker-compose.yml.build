version: '3.8'

services:
  toolarr:
    image: toolarr:latest
    env_file: .env
    networks:
      - traefik_public
    deploy:
      mode: global
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3

networks:
  traefik_public:
    external: true

    
    
    
    
